<!DOCTYPE html>
<html>
  <head>
    <title>BooksFace</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to "BooksFace", root_path, class:"navbar-brand text-uppercase" %>
            </div>
            <!-- /.navbar-header -->
            <div class="collapse navbar-collapse" id="navbar-collapse">
              <div class="nav navbar-right navbar-btn">
                <%= link_to new_book_path, class:"btn btn-default" do%>
                  <i class="glyphicon glyphicon-plus"></i>
                  Add Book
              <% end %>
              </div>
            </div>
          </div>
        </nav>

        <!-- content -->
        <div class="container">
          <div class="row">
            <div class="col-md-3">
              <div class="list-group">
                <a href="#" class="list-group-item active">All Books <span class="badge">10</span></a>
                <a href="" class="list-group-item">Adventure <span class="badge">4</span></a>
                <a href="" class="list-group-item">SF <span class="badge">3</span></a>
                <a href="" class="list-group-item">Romance <span class="badge">3</span></a>
                <a href="" class="list-group-item">Classic <span class="badge">3</span></a>
                <a href="" class="list-group-item">Comedy <span class="badge">3</span></a>
                <a href="" class="list-group-item">Other <span class="badge">3</span></a>
              </div>
            </div><!-- /.col-md-3 -->

            <div class="col-md-9">
              <% flash.each do |type, message| %>
              <%= content_tag :div, class: "alert alert-#{type} alert-dismissible", role: "alert" do %>
                     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                     <%= message %>
                <% end %>
              <% end %>
              <%= yield %>

              <div class="text-center">
                <nav>
                  <ul class="pagination">
                    <li>
                      <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                      </a>
                    </li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li>
                      <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                      </a>
                    </li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
  </body>
</html>
